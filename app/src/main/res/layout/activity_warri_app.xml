<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Banner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_x="0dp"
        android:layout_y="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/headerimage"
            android:scaleType="fitXY" />

        <!-- Banner Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Welcome to Warri Parliament"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5" />
    </RelativeLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="18dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent">

        <!-- Home Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Home"
            android:textSize="16sp"
            android:textColor="#F7F7F7"
            android:onClick="goToHomePage" />

        <!-- About Us Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="About Us"
            android:textSize="16sp"
            android:textColor="#F7F7F7"
            android:onClick="goToAboutUsPage" />

        <!-- Legislative Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Legislative"
            android:textSize="16sp"
            android:textColor="#F7F7F7"
            android:onClick="goToLegislativePage" />

        <!-- Contact Us Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Contact Us"
            android:textSize="16sp"
            android:textColor="#F7F7F7"
            android:onClick="goToContactUsPage" />
    </LinearLayout>

    <!-- About Us Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="184dp"
        android:text="About Us"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="220dp"
        android:text="The Parliament is a leading international relief and development..."
        android:textSize="14sp"
        android:textColor="#555555"
        android:fontFamily="sans-serif" />

    <!-- Member Zone Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="270dp"
        android:text="Member Zone"
        android:textSize="20sp"
        android:textColor="#FFFF"
        android:background="#88d0a5"
        android:paddingRight="210dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Member Zone Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="300dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:alignmentMode="alignMargins"
            android:padding="10dp">

            <!-- Add Images for Member Zone -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop" />

            <!-- Additional Member Images -->
            <!-- Repeat for other members -->
        </GridLayout>
    </LinearLayout>

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="620dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#F7F7F7"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: info@warriparliament.org"
            android:textSize="14sp"
            android:textColor="#555555"
            android:fontFamily="sans-serif" />

        <!-- Social Media Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:src="@drawable/facebook_icon" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:src="@drawable/twitter_icon" />
        </LinearLayout>
    </LinearLayout>

</AbsoluteLayout>
